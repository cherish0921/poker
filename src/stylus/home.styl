.home
    padding: 0.32rem 0.37rem 0.79rem
.poker_result
    display: flex
    flex-direction: row
    align-items: center
    margin-bottom: 0.32rem
    justify-content: space-between
    width: 100%
    height: 2.2rem
    padding: 0.2rem
    border: 1px solid #777
    border-radius: 0.08rem
    &>div
        flex: 1
        height: 100%
        display: flex
        align-items: center
        justify-content: center
        &:first-child
            border-right: 1px solid #777
.poker_panel
    width: 100%
    padding: 0.4rem 0.32rem
    background-color: #4b4660
    border-radius: 0.08rem
    .poker-betroutine
        display: flex
        flex-direction: row
        align-items: center
        .poker-betbigoptions
            width: 32%
            display: flex
            flex-direction: column
            align-items: center
            &.middle
                margin: 0px 2%
            .poker-betodds
                color: #7d769a
                font-size: 0.32rem
                margin-bottom: 0.32rem
                em
                    color: #fff
        .poker-betrange
            width: 1.86rem
            height: 1.86rem
            background-color: #262335
            display: flex
            align-items: center
            justify-content: center
            margin-bottom: 0.32rem
            border-radius: 0.08rem
            color: #ffffff
            font-size: 0.58rem
            &:active
                background-color: #3c3656
.poker-morebet
    width: 100%
    display: flex
    flex-direction: row
    align-items: center
    justify-content: space-between
    &>div
        width: 48%
        display: flex
        flex-direction: row
        flex-wrap: wrap
        background-color: #262335
        border-radius: 0.08rem
        overflow: hidden
    .poker-morebet-item
        width: 50%
        height: 1.86rem
        display: flex
        justify-content: center
        align-items: center
        flex-direction: column
        font-size: 0.4rem
        color: #ffffff
        em
            font-size: 0.32rem
        &:active
            background-color: #3c3656
        &:nth-child(odd)
            border-right: 1px solid #777
        &:nth-child(1),&:nth-child(2)
            border-bottom: 1px solid #777